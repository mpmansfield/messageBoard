<!DOCTYPE html>
<html>
  <head>
    <title>MessageBoard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= notice %>
    <%= alert %>
    
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= link_to 'Boards', boards_path %> |
    <%= link_to 'Log In', sign_in_path %> |
    <%= link_to 'Log Out', sign_out_path %> 

    <% if current_user %>
      | <%= link_to 'Request Discipline', new_discipline_request_path %>
    <% end %>
    
    
    <% if current_user && current_user.role == 'administrator' %>
      | 
      <%= link_to 'Admin: List Users', users_path %> | 
      <%= link_to 'Admin: Assign Users', list_confirmed_path %> |
      <%= link_to 'Admin: New Discipline', new_discipline_path %>
    <% end %>

    <% if current_user %>
      <%= " | Logged in as: #{current_user.email}" %>
      | 
      <%= link_to 'Profile', user_path(current_user.id) %>
    <% end %>

    <%= yield %>
  </body>
</html>
